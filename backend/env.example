# Example environment configuration for backend
# Copy this file to .env and adjust values as needed

# App
APP_NAME=Just Chat A Moment API

# Database
# For SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./data.db
# For Postgres example
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/just_chat

# Auth
SECRET_KEY=please-change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
# Multiple origins can be comma-separated, e.g. http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=* 